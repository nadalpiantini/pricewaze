{
    "title": "SuperCasas Scraper Input",
    "description": "Configuration for scraping SuperCasas.com real estate listings",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "maxItems": {
            "title": "Maximum items",
            "description": "Maximum number of properties to scrape",
            "type": "integer",
            "default": 50,
            "minimum": 1,
            "maximum": 1000,
            "editor": "number"
        },
        "city": {
            "title": "City",
            "description": "City to search in (use URL slug format)",
            "type": "string",
            "default": "santo-domingo",
            "enum": [
                "santo-domingo",
                "santiago",
                "punta-cana",
                "la-romana",
                "puerto-plata",
                "san-pedro-de-macoris",
                "all"
            ],
            "editor": "select"
        },
        "propertyType": {
            "title": "Property Type",
            "description": "Type of property to search for",
            "type": "string",
            "default": "all",
            "enum": [
                "all",
                "casas",
                "apartamentos",
                "terrenos",
                "locales"
            ],
            "enumTitles": [
                "All Properties",
                "Houses",
                "Apartments",
                "Land/Lots",
                "Commercial"
            ],
            "editor": "select"
        },
        "transactionType": {
            "title": "Transaction Type",
            "description": "Sale or rent",
            "type": "string",
            "default": "venta",
            "enum": ["venta", "alquiler"],
            "enumTitles": ["For Sale", "For Rent"],
            "editor": "select"
        },
        "minPrice": {
            "title": "Minimum Price",
            "description": "Minimum price filter (optional)",
            "type": "integer",
            "editor": "number",
            "nullable": true
        },
        "maxPrice": {
            "title": "Maximum Price",
            "description": "Maximum price filter (optional)",
            "type": "integer",
            "editor": "number",
            "nullable": true
        },
        "webhookUrl": {
            "title": "Webhook URL",
            "description": "URL to send results to (optional - uses Apify webhook if not set)",
            "type": "string",
            "editor": "textfield",
            "nullable": true
        },
        "webhookSecret": {
            "title": "Webhook Secret",
            "description": "Bearer token for webhook authentication",
            "type": "string",
            "editor": "textfield",
            "isSecret": true,
            "nullable": true
        },
        "startUrls": {
            "title": "Start URLs",
            "description": "Custom URLs to start scraping from (overrides city/type settings)",
            "type": "array",
            "editor": "stringList",
            "default": []
        }
    },
    "required": []
}
